<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#D2B48C"
tools:context=".ScheduledCallActivity">
<RelativeLayout
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tveventStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="50sp"
            android:singleLine="true"
            android:text="7563015402"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#87966222"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDay"
                android:layout_width="90dp"
                android:layout_height="55dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4a0000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_Day"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="days"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#567"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtHour"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4a0000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_Hour"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="hours"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#98741111"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMinute"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4a0000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_Minute"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="minutes"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#387"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSecond"
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#4a0000"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_Second"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="seconds"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/textView4"
        android:layout_width="406dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/LinearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        android:text="2020-02-15, 11:30 AM \n Phone Number : +919875487829"
        android:textColor="#000"
        android:textSize="25sp" />


    <Button
        android:id="@+id/button22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:onClick="Back"
        android:text="Back" />

    <Button
        android:id="@+id/button23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="11dp"
        android:background="@android:color/transparent"
        android:onClick="Next"
        android:text="Next" />

    <Button
        android:id="@+id/button24"
        android:layout_width="392dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="270dp"
        android:background="@android:color/transparent"
        android:onClick="Recorder"
        android:text="Recorder" />


</RelativeLayout>

</RelativeLayout>

